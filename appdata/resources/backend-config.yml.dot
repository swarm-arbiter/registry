version: 0.1
log:
  accesslog:
    disabled: false
  level: debug
  formatter: json

  fields:
    service: registry
storage:
  cache:
    blobdescriptor: inmemory
  filesystem:
    rootdirectory: /var/lib/registry
http:
  addr: :5000
  headers:
    X-Content-Type-Options: [nosniff]
health:
  storagedriver:
    enabled: true
    interval: 10s
    threshold: 3
auth:
  htpasswd:
    realm: DockerRegistry
    path: /auth/.htpasswd
notifications:
  endpoints:
    - name: docker-registry-ui
      url: http://registry_gui:8080/api/events
      headers:
        Authorization: [Bearer {{= secrets.bearer_token }}]
      timeout: 1s
      threshold: 5
      backoff: 10s
      ignoredmediatypes:
        - application/octet-stream
